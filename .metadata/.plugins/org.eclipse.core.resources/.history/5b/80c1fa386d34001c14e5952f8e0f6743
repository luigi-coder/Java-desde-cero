import javax.swing.JOptionPane;

public class Validacion_Mail {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int arroba = 0;
		
		String mail = JOptionPane.showInputDialog("Ingrese su email ejemplo@mail.com");
		
		do {
			mail = JOptionPane.showInputDialog("Por favor vuelve a ingresar " + 
										       "tu email recorda colocar el @: "); 
			
			for(int i=0; i<mail.length(); i++) {
				
				if(mail.charAt(i)=='@') {
					
					arroba++;
				}
			}
		}while(mail.contains("@")==false);
		
		
		if(arroba==1) {
			
			JOptionPane.showMessageDialog(null, "El email es correcto");
			
		}else {
			
			JOptionPane.showMessageDialog(null, "El email es incorrecto");
		}
	}

}
